<html lang="en">
    <%- include('./Partials/head.ejs') %>
<body>
    <!-- Header -->
    <header>
        <div class="logo">üìù <a class="header-title" href="/">Yadud's To-Do</a></div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/myTasks">My Tasks</a></li>
                <li><a href="/calendar">Calendar</a></li>
                <li><a href="/about">About</a></li>
                <li><a class="profile">üë§ Profile</a></li>
            </ul>
        </nav>
    </header>

    <!-- Add or Edit Task Section -->
    <div class="add-task-container">
        <h1><%= task ? 'Edit Task: ' + task.title : 'Add New Task' %></h1>

        <form id="add-task-form" action="/" method="POST">
            <% if (task) { %>
                <input type="hidden" name="_id" value="<%= task._id %>">
            <% } %>
        
            <label for="task-title">Task Title:</label>
            <input type="text" id="task-title" name="title" required>
        
            <label for="task-description">Description:</label>
            <textarea id="task-description" name="description" required></textarea>
        
            <label for="task-date">Due Date:</label>
            <input type="date" id="task-date" name="dueDate" required>
        
            <label for="task-priority">Priority:</label>
            <select id="task-priority" name="priority" required>
                <option value="" default>Select Priority</option>
                <option value="Low">Low</option>
                <option value="High">High</option>
            </select>
        
            <button class="submit-task-btn" type="submit"></button>
        </form>        
    </div>

    <%- include('./Partials/footer.ejs') %> 
</body>
</html>
